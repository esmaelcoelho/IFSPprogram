

1 ENTRAR VIA TELCADO COM A BASE E A ALTURA DE UM RETÂNGULO, CALCULAR E EXIBIR SUA ÁREA.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            float bas, altura, area;
            Console.WriteLine("Digite a base do retangulo");
            bas = float.Parse(Console.ReadLine());
            Console.WriteLine("Digite a altura do retângulo");
            altura = float.Parse(Console.ReadLine());
            area = bas * altura;
            Console.WriteLine("A área do retângulo é: " + area);
            Console.WriteLine();
        }
    }
}

2 CALCULAR E EXIBIR A ÁREA DE UM QUADRADO, A PARTIR DO VALOR DE SUA ARESTA QUE SERÁ DIGITADO

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double lado, area, aresta;
            Console.WriteLine("Digite o lado do quadrado");
            lado = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite a Aresta");
            aresta = double.Parse(Console.ReadLine());
            area = lado * 4 * aresta * 4;
            Console.WriteLine("A área do quadrado é: " + area);
            Console.WriteLine();            
        }
    }
}

3 CALCULAR E EXIBIR A ÁREA DE UM QUADRADO A PARTIR DO VALOR DE SUA DIAGONAL QUE SERÁ DIGITADO.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double lado, area, diagonal;
            Console.WriteLine("Digite o lado do quadrado");
            lado = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite o valor da diagonal");
            diagonal = double.Parse(Console.ReadLine());
            area = lado * 4 * diagonal * 2 / 2;
            Console.WriteLine(" A area do quadrado é: " + area);
            Console.WriteLine();
        }
    }
}

4 A PARTIR DOS VALORES DA BASE E ALTURA DE UM TRIÂNGULO, CALCULAR E EXIBIR SUA ÁREA.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double comprimento, altura, area;
            Console.WriteLine(" Digite o comprimento do triângulo");
            comprimento = double.Parse(Console.ReadLine());
            Console.WriteLine(" Digite o valor da altura do triângulo");
            altura = double.Parse(Console.ReadLine());
            area = comprimento * altura / 2;
            Console.WriteLine(" A área do triângulo é: " + area);
            Console.WriteLine();
        }
    }
}

5 CALCULAR E EXIBIR A MÉDIA GEOMÉTRICA DE DOIS VALORES QUAISQUER QUE SERÃO DIGITADOS.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double nota1, nota2, nota3, nota4, media;
            Console.WriteLine("Digite a nota 1");
            nota1 = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite a nota 2");
            nota2 = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite a nota 3");
            nota3 = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite a nota 4");
            nota4 = double.Parse(Console.ReadLine());
            media = (nota1 + nota2 + nota3 + nota4) / 4;
            Console.WriteLine("A sua Média é: " + media);
            Console.WriteLine();
        }
    }
}

6 CALCULAR E EXIBIR A MÉDIA GEOMÉTRICA DE DOIS VALORES QUAISQUER QUE SERÃO DIGITADOS.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double valor1, valor2, media;
            Console.WriteLine("Digite o valor 1");
            valor1 = double.Parse(Console.ReadLine());
            Console.WriteLine("Digite o valor 2");
            valor2 = double.Parse(Console.ReadLine());
            media = valor1 * valor2;
            Console.WriteLine(" A média geométrica é: " + media);
            Console.WriteLine();
         }
    }
}

7 SABENDO QUE UMA MILHA MARITIMA EQUIVALE A UM MIL, OITOCENTOS E CINQUENTA E DOIS METROS E QUE UM QUILÔMETRO POSSUI MIL METROS, FAZER UM PROGRAMA PARA
CONVERTER MILHAS MARITIMAS EM QUILÔMETROS.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double milha;
            double conversao;
            Console.WriteLine("Digite o valor da Milha para conversao");
            milha = double.Parse(Console.ReadLine());
            conversao = 1852*milha/1000;
            Console.WriteLine(" A conversao é: " + conversao +"km.");
            Console.WriteLine();
         }
    }
}

8 ENTRAR VIA TECLADO COM VALOR DE UMA TEMPERATURA EM GRAUS CELSIUS, CALCULAR E EXIBIR SUA TEMPERATURA EQUIVALENTE EM FAHRENHEIT.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Double celsus, fahrenheit;
            Console.WriteLine("Digite o valor da temperatura;");
            celsus = double.Parse(Console.ReadLine());
            fahrenheit = ((celsus) / (5) * (9) + (32));
            Console.WriteLine(" A temperatura em Fahrenheit é; " + fahrenheit);
            Console.WriteLine();
        }
    }
}

9 A PARTIR DO DIÂMETRO DE UM CÍRCULO QUE SERÁ DIGITADO, CALCULAR E EXIBIR SUA ÁREA.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Double raio = 0;
            Double diametro = 0;
            Double area = 0;
            Console.WriteLine("Digite o valor do raio:");
            raio = Double.Parse(Console.ReadLine());
            Console.WriteLine("Digite o diâmetro do circulo:");
            diametro = Double.Parse(Console.ReadLine());
            area = 3.14 * raio * raio;
            Console.WriteLine("A área do circulo é : " + area);
            Console.WriteLine();
        }
    }
}

10 ENTRAR VIA TELCADO COM O VALOR DA COTAÇÃO DO DÓLAR E UMA CERTA QUANTIDADE DE DÓLARES. CALCULAR E EXIBIR O VALOR CORRESPONDENTE EM REAIS(R$)

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double dolar, cota, reais;
            Console.WriteLine("insira o valor em dolares: ");
            dolar = double.Parse(Console.ReadLine());
            Console.WriteLine("insira a cotação do dolar: ");
            cota = double.Parse(Console.ReadLine());
            reais = dolar * cota;
            Console.WriteLine("O valor convertido para reais é: R$ "+ reais);
            Console.WriteLine();
        }
    }
}

11 ENTRAR VIA TECLADO COM DOIS VALORES QUAISQUER "X" E "y". CALCULAR E EXIBIR O CALCULO XY("X) ELEVADO A "y").

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double x, y, total;
            Console.WriteLine("insira o valor de x: ");
            x = double.Parse(Console.ReadLine());
            Console.WriteLine("insira o valor de y: ");
            y = double.Parse(Console.ReadLine());
            total = Math.Pow(x, y);
            //usasse Math.Pow para potencia.
            Console.WriteLine("O resultado é: "+ total);
            Console.WriteLine();
        }
    }
}

12 ENTRAR VIA TECLADO COM O VALOR DE CINCO PRODUTOS. APÓS AS ENTRADAS, DIGITAR UM VALOR REFERENTE AO PAGAMENTO DA SOMATÓRIA DESTES VALORES. CALCULAR E EXIBIR
O TROCO QUE DEVERÁ SER DEVOLVIDO.

using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace projeto
{
    internal class Program
    {
        static void Main(string[] args)
        {
            double prod1, prod2, prod3, prod4, prod5, soma, troco, pagamento;

            Console.Write("insira o valor do produto 1: ");
            prod1 = double.Parse(Console.ReadLine());
            Console.Write("insira o valor do produto 2: ");
            prod2 = double.Parse(Console.ReadLine());
            Console.Write("insira o valor do produto 3: ");
            prod3 = double.Parse(Console.ReadLine());
            Console.Write("insira o valor do produto 4: ");
            prod4 = double.Parse(Console.ReadLine());
            Console.Write("insira o valor do produto 5: ");
            prod5 = double.Parse(Console.ReadLine());

            soma = prod1 + prod2 + prod3 + prod4 + prod5;
            Console.WriteLine("O valor total da compra é {0}  \n", soma);

            Console.Write("insira o valor recebido: R$");
            pagamento = double.Parse(Console.ReadLine());

            troco = pagamento - soma;

            Console.Write(" Troco: R$ " + troco);

            Console.WriteLine();
        }
    }
}
